      </div>

      <!-- FORMULARIO -->
      <div class="col-md-8 p-4">
        <h3 class="mb-4 text-secondary fw-bold">Perfil de Usuario</h3>

        <form action="/SolicitarDatos" method="POST" id="formulario_esitar_usuario" enctype="multipart/form-data">
          <div class="row">

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Nombre de Usuario</label>
              <input type="text" name="username" class="form-control border-1" style="border-color:#cfcfcf;"
                placeholder="Ingresa tu nombre" value="<%= user.username %>" />
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Edad</label>
              <input type="number" name="edad" class="form-control border-1" style="border-color:#cfcfcf;"
                placeholder="Ingresa tu edad" value="<%= user.edad %>"/>
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Nombre</label>
              <input type="text" name="nombre" class="form-control border-1" style="border-color:#cfcfcf;"
                placeholder="Ingresa tu edad" value="<%= user.nombre %>"/>
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Correo</label>
              <input type="email" class="form-control border-1" style="border-color:#cfcfcf;"
                placeholder="correo@example.com" value="<%= user.email %>" />
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Teléfono</label>
              <input type="tel" name="telefono" class="form-control border-1" style="border-color:#cfcfcf;"
                placeholder="Número de teléfono" value="<%= user.telefono %>" />
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Contraseña</label>
              <input type="password" class="form-control border-1" style="border-color:#cfcfcf;" placeholder="******" />
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold text-secondary">Confirmar contraseña</label>
              <input type="password" class="form-control border-1" style="border-color:#cfcfcf;" placeholder="******" />
            </div>

            <div class="col-md-12 mb-3">
              <!-- <label class="form-label fw-semibold text-secondary">Foto de perfil</label>
              <input type="file" class="form-control border-1" style="border-color:#cfcfcf;" /> -->

              <label class="form-label fw-semibold text-secondary" for="foto">Foto de perfil</label>
              <input type="file" id="foto" name="foto" , class="form-control border-1" style="border-color:#cfcfcf;">
            </div>

          </div>

          <!-- BOTONES CON ANIMACIÓN -->
          <button type="submit" class="btn w-100 mt-3 fw-semibold btn-anim"
            style="background:#ff9f43; color:white; border:none;">
            Guardar cambios
          </button>

          <!-- <button type="button"
            class="btn w-100 mt-2 fw-semibold btn-anim"
            style="background:#4a90e2; color:white; border:none;">
            Cambiar foto de perfil
          </button> -->

        </form>
      </div>

